<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_line"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<com.miracle.michael.naoh.common.view.CircleImageView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:orientation="horizontal">

            <com.miracle.sport.onetwo.view.MImgView
                android:id="@+id/iv1_1"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <LinearLayout
                android:paddingLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:paddingLeft="4dp"
                    android:paddingRight="2dp"
                    android:text="官方：前国足新闻官付强离开华夏幸福公司"
                    android:textColor="@color/main_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fl_item_now_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥123"
                        android:textColor="#ff581e"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fl_item_sub_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/juer1"
                        android:minWidth="50dp"
                        android:text="劵 111"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fl_item_org_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥123"
                        android:textColor="#aaaaaa"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/fl_item_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3215人已买"
                        android:textColor="#7f7f7f"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.miracle.sport.onetwo.view.MImgView
                android:id="@+id/iv1_2"
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <com.miracle.sport.onetwo.view.MImgView
                android:id="@+id/iv2_2"
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.miracle.sport.onetwo.view.MImgView
                android:id="@+id/iv1"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <com.miracle.sport.onetwo.view.MImgView
                android:id="@+id/iv2"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <com.miracle.sport.onetwo.view.MImgView
                android:id="@+id/iv3"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|left"
                android:paddingLeft="1dp"
                android:textColor="@color/red_ball"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|left"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="@color/m999999"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/im_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/message_open"
                android:drawablePadding="5dp"
                android:paddingLeft="1dp"
                android:paddingRight="16dp"
                android:text="6"
                android:textColor="@color/m666666" />

            <TextView
                android:id="@+id/im_click_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/good"
                android:drawablePadding="5dp"
                android:text="600"
                android:textColor="@color/m666666" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
